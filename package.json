{
  "name": "@fand/hatena-blog-theme-boilerplate",
  "description": "A boilerplate for Hatena Blog theme using Sass and ITCSS",
  "version": "0.0.0",
  "author": "fand <fand@gmork.in>",
  "bin": {
    "hbt": "bin/cli.sh",
  },
  "bugs": {
    "url": "https://github.com/fand/hatena-blog-theme-boilerplate/issues"
  },
  "dependencies": {
    "normalize.css": "^4.2.0"
  },
  "devDependencies": {
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-glob": "^1.1.1",
    "node-sass": "^3.8.0",
    "node-sass-globbing": "0.0.23"
  },
  "homepage": "https://github.com/fand/hatena-blog-theme-boilerplate/issues",
  "license": "MIT",
  "main": "index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/fand/hatena-blog-theme-boilerplate"
  },
  "scripts": {
    "build": "node-sass --importer=node_modules/node-sass-globbing/index.js --include-path=lib index.scss -o .",
    "watch": "node-sass -w --importer=node_modules/node-sass-globbing/index.js --include-path=lib index.scss -o .",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
